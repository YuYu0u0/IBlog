<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Blog</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/blogs" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="blog[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="text">What do you want to share</label>
                <textarea class="form-control" type="text" id="text" name="blog[text]"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Blog</button>
            </div>
        </form>
        <a href="/blogs">All Blogs</a>
    </div>
</div>